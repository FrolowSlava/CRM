@model DescriptionServiModel

@{
	var exists = Model != null && Model.DescriptionServisId != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " DescriptionServi";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="DescriptionServisId"></label>
				<input type="text" asp-for="DescriptionServisId" class="form-control"/>
				<span asp-validation-for="DescriptionServisId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="ServisId"></label>
				<input type="text" asp-for="ServisId" class="form-control"/>
				<span asp-validation-for="ServisId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="OrderId"></label>
				<input type="text" asp-for="OrderId" class="form-control"/>
				<span asp-validation-for="OrderId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="WorkerId"></label>
				<input type="text" asp-for="WorkerId" class="form-control"/>
				<span asp-validation-for="WorkerId" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
