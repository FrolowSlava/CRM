@model ClientModel

@{
	var exists = Model != null && Model.ClientId != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Client";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="ClientId"></label>
				<input type="text" asp-for="ClientId" class="form-control"/>
				<span asp-validation-for="ClientId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Name"></label>
				<input type="text" asp-for="Name" class="form-control"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Phone"></label>
				<input type="text" asp-for="Phone" class="form-control"/>
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Order"></label>
				<input type="text" asp-for="Order" class="form-control"/>
				<span asp-validation-for="Order" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="SpentSum"></label>
				<input type="text" asp-for="SpentSum" class="form-control"/>
				<span asp-validation-for="SpentSum" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="BonusLevel"></label>
				<input type="text" asp-for="BonusLevel" class="form-control"/>
				<span asp-validation-for="BonusLevel" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
