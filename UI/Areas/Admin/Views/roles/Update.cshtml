@model RoleModel

@{
	var exists = Model != null && Model.RolesId != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Role";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="RolesId"></label>
				<input type="text" asp-for="RolesId" class="form-control"/>
				<span asp-validation-for="RolesId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="RoleName"></label>
				<input type="text" asp-for="RoleName" class="form-control"/>
				<span asp-validation-for="RoleName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Salary"></label>
				<input type="text" asp-for="Salary" class="form-control"/>
				<span asp-validation-for="Salary" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
