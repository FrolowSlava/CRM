@model WorkerModel

@{
	var exists = Model != null && Model.WorkerId != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Worker";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="WorkerId"></label>
				<input type="text" asp-for="WorkerId" class="form-control"/>
				<span asp-validation-for="WorkerId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="WorkerName"></label>
				<input type="text" asp-for="WorkerName" class="form-control"/>
				<span asp-validation-for="WorkerName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="RolesId"></label>
				<input type="text" asp-for="RolesId" class="form-control"/>
				<span asp-validation-for="RolesId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="IsBusy"></label>
				<select asp-for="IsBusy" asp-items="@Html.GetNullableBoolSelectList("---НЕ ВЫБРАНО---")" class="form-control"></select>
				<span asp-validation-for="IsBusy" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
