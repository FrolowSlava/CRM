@model SearchResultViewModel<WorkerModel>

@{
	ViewBag.Title = "Работники";
	var pagedList = Html.PagedList(Model.PagesInfo.ItemsCount, Model.PagesInfo.ItemsPerPage, Model.PagesInfo.CurrentPage,
		Model.PagesInfo.DisplayedPages, pageNumber => Url.Action(Url.GetAction(), new
		{
			page = pageNumber
		}), new PagedListExtensions.PagedListRenderParams());
}

<div class="row">
	<div class="col-md-12">
		<div class="card mb-3">
			<div class="card-body">
				<a asp-action="Update" class="btn btn-outline-primary">Добавить</a>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		@pagedList
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-striped">
				<tr>
					<th class="text-center">ID</th>
					<th class="text-center">Имя</th>
					<th class="text-center">ID должности</th>
					<th class="text-center">Занят</th>
					<th class="text-center">Действия</th>
				</tr>
				@foreach (var item in Model.Objects)
				{
					<tr>
						<td class="text-center">
							@item.WorkerId
						</td>
                        <td class="text-center">
                            @item.WorkerName
                        </td>
                        <td class="text-center">
                            @item.RolesId
                        </td>
                        <td class="text-center">
                            @item.IsBusy
                        </td>
                        <td class="text-center">
							<a asp-action="Update" asp-route-id="@item.WorkerId">Изменить</a><br/>
							<a asp-action="Delete" asp-route-id="@item.WorkerId" class="delete-object-button">Удалить</a>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		@pagedList
	</div>
</div>
